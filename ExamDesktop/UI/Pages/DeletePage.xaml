<Page x:Class="ExamDesktop.UI.Pages.DeletePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExamDesktop.UI.Pages"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="600"
      Title="DeletePage">

    <Grid Background="#0E1621">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Delete Student" Foreground="#C8C8C8" FontSize="30" HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

        <TextBox x:Name="StudentId" md:HintAssist.Hint="StudentId" Grid.Row="1" Background="#C8C8C8" Margin="18" FontSize="17"
                TextAlignment="Justify" VerticalContentAlignment="Center" Padding="10"
                 Foreground="#0E1621" Width="300" Height="50"/>

        <Button Grid.Row="4" Content="Submit" Width="110" Click="Button_Click"/>
    </Grid>
</Page>
